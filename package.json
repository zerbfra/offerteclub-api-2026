    "docker:logs": "docker compose logs -f redis"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@amzn/creatorsapi-nodejs-sdk": "file:vendor/creatorsapi-nodejs-sdk",
    "@fastify/cors": "^10.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "dotenv": "^16.4.5",
    "fastify": "^5.1.0",
    "fastify-plugin": "^5.0.1",
    "ioredis": "^5.4.1",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "pg": "^8.19.0"
  }
}
